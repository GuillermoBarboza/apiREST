<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <div class="container">
      <% if(user) { %>
      <h1 class="titleUserHome">Bienvenido a Twita</h1>

      <div class="row">
        <div class="col-12">
          <h3>Twiteale algo al mundo</h3>
          <form class="form-group" action="/twitealo" method="POST">
            <input type="hidden" name="author" value=<%- user._id %> />
            <input
              type="hidden"
              name="dateOfCreation"
              value=<%-Date.now()%>  
            />
            <textarea name="body" rows="4"> </textarea>
            <div><button type="submit">Twit!</button></div>
          </form>
        </div>
      </div>

       <!-- cada twit  -->
       <div class="twit-container ">
        <% feedResults.forEach(twit => { %>
        <div class="row my-3">
          <!-- Usuario -->
          <div class="col-12 d-flex justify-content-between">
            <img class="img-thumbnail avatar-twit" src=<%- twit.author.avatar %> alt="" />
            <p><%- twit.author.firstname %> <%- twit.author.lastname %> </p>
            <p><%- twit.author.username %></p>
            
            <% if(user.following.indexOf(twit.author._id) != -1) { %>
              <form action="/follow" method="POST">
                
                <input type="hidden" name="author" value=<%- twit.author._id %> />
                <button type="submit">Unfollow</button>
            </form>
            <% } else { %>
              <form action="/follow" method="POST">
                
                <input type="hidden" name="author" value=<%- twit.author._id %> />
                <button type="submit">Follow</button>
              </form>
            <% } %>

            
            
          </div>
          <!-- Twit -->
          <div class="col-12">
            <p>
                <%- twit.body %>
            </p>
            <div>
                <p> <%- twit.dateOfCreation %></p>
                <p> <%- twit.likes %></p>
                <button>Like!</button>
            </div>
            
          </div>
        </div>
        <% }) %>
        </div>

      <a href="http://localhost:3000/logout">Log Out</a>
      <% } else { %>
      <h2 class="titleHome">Ingresar a Twita</h3>
      <h6 class="text-center">Únete al twita ya mismo</h5>
      <div class="d-flex justify-content-center">       
          <a class="btn btn-signUp btn-lg" href="http://localhost:3000/registro"
            >Regístrate aquí</a
          >
        <a class="btn btn-logIn-home btn-lg" href="http://localhost:3000/login"
            >Iniciar sesión</a
          >
        </div>
      </div>
    </div>
    <% } %>
  </body>
</html>
